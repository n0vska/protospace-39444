<main class="main">
  <div class="inner">
    <% if user_signed_in? %> <!-- ユーザーがログインしているかどうかを確認 -->
      <div class="greeting">
        こんにちは、
        <%= link_to "#{current_user.name}さん", user_path(current_user) %>
      </div>
    <% end %>
    <div class="card__wrapper">
      <%= render partial: 'prototype', collection: @prototypes %>
    </div>
  </div>
</main>
